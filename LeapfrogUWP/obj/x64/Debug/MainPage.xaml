<Page x:ConnectionId='1' x:Name="mainPage"
      x:Class="LeapfrogUWP.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:LeapfrogUWP"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      Height="510"
      Width="820"
    >

    <Grid Height="505"
          Width="810"
          HorizontalAlignment="Left"
          VerticalAlignment="Top"
          Background="#FF0000C0"
          BorderBrush="White"
          BorderThickness="2"
          CornerRadius="10"
    >
        <Grid.RowDefinitions>
            <RowDefinition Height="440*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1200"/>
        </Grid.ColumnDefinitions>

        <!--"Froggy" Game Image -->
        <Image x:ConnectionId='2' x:Name="picGameImage"
               Source="/Assets/GameImages/LeapFrog.jpg"
               Height="430"
               Width="360"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="5,5,0,0"
               FocusVisualPrimaryBrush="#FF0000C0"
         />

        <!--Game Title -->
        <TextBlock x:ConnectionId='3' x:Name="lblGameTitle"
                   Text="lblGameTitle"
                   Height="auto"
                   Width="auto"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="395,55,0,0"
                   Foreground="White"
                   FontFamily="Arial Black"
                   FontWeight="ExtraBold"
                   FontSize="36"
         />

        <!--Game SubTitle -->
        <TextBlock x:ConnectionId='4' x:Name="txtSubTitle"
                   Text="txtSubTitle"
                   Height="auto"
                   Width="auto"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="395,95,0,0"
                   FontFamily="Arial"
                   FontSize="24"
                   Foreground="White"
        />

        <!--Game Version -->
        <TextBlock x:ConnectionId='5' x:Name="txtVersion"
                   Text="txtVersion"
                   Height="auto"
                   Width="auto"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="395,145,0,0"
                   FontFamily="Arial"
                   FontSize="18"
                   Foreground="White"
        />

        <!--Game Publisher -->
        <TextBlock x:ConnectionId='6' x:Name="txtPublisher"
                   Text="txtPublisher"
                   Height="auto"
                   Width="auto"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="395,165,0,0"
                   FontFamily="Arial"
                   FontSize="18"
                   Foreground="White"
        />

        <!--Copyright Notice -->
        <TextBlock x:ConnectionId='7' x:Name="lblCopyright"
                   Text="lblCopyright"
                   Height="auto"
                   Width="auto"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="395,205,0,0"
                   FontFamily="Arial"
                   FontSize="18"
                   Foreground="White"
        />

        <!--Rights Reserved -->
        <TextBlock x:ConnectionId='8' x:Name="txtRights"
                   Text="txtRights"
                   Height="auto"
                   Width="auto"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="395,230,0,0"
                   FontFamily="Arial"
                   FontSize="16"
                   Foreground="White"
        />

        <!--Rights Reserved -->
        <Button x:ConnectionId='9' x:Name="LaunchGame"
                Content="Launch Game"
                Height="50"
                Width="150"
                Margin="395,380,0,0"
                VerticalAlignment="Top"
                FontFamily="Arial"
                FontSize="16"
                FontWeight="Bold"
                FontStyle="Italic"
                Foreground="White"
                Background="Blue"
                BorderBrush="White"
                BorderThickness="2"
                                            Grid.RowSpan="2"
        />
    </Grid>
</Page>

