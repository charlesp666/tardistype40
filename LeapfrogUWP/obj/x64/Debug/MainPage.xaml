<Page
    x:Class="LeapfrogUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LeapfrogUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FF0000C0">
        <Grid x:ConnectionId='2' Name="gameTableau" Background="#FF0000C0" Margin="0,0,-1000,-150">
            <GridView x:ConnectionId='3' x:Name="dataGridGameBoard"
                      SelectionMode="None"
                      IsItemClickEnabled="True"
                      HorizontalAlignment="Left"
                      Height="79"
                      Margin="190,500,0,0"
                      VerticalAlignment="Top"
                      >
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid MaximumRowsOrColumns="13"
                                       Orientation="Horizontal"
                        />
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                <GridView.ItemTemplate>
                    <DataTemplate x:Name="CardPosition">
                        <StackPanel Height="280" Width="180" Margin="12" >
                            <Image Name="CardFace"
                                Height="180"
                                Width="180"
                                Stretch="UniformToFill"
                                Source="gameDeck.cardFace"
                            />
                            <StackPanel Margin="0,12">
                                <TextBlock Name="CardRank"/>
                                <TextBlock Name="CardSuit"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>
    </Grid>
</Page>

