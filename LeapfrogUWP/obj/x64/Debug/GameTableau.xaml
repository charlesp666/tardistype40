<Page x:ConnectionId='1' x:Name="pgGameTableau"
      x:Class="LeapfrogUWP.GameTableau"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:LeapfrogUWP"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      Height="800"
      Width="1500"
>

    <Grid x:ConnectionId='2' Name="gameTableau"
          Margin="2,5"
          Background="Blue"
          BorderThickness="5"
          BorderBrush="Black"
    >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1490"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="600*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>

        <!--Game Tableu Header -->
        <Border x:ConnectionId='3' Name="bdrHeader"
                Grid.Row="0"
                Margin="2,2"
                Width="1480"
                Height="50"
                Background="Blue"
                BorderThickness="2"
                BorderBrush="Black"
        >

            <TextBlock x:ConnectionId='12' x:Name="tblHeader"
                       Text="Header Stuff"
                       Margin="1,1,1,1"
                       Width="1478"
                       Height="48"
                       FontSize="24pi"
                       Foreground="White"
            />
        </Border>
        
        <!--Game Tableu Playing Area -->
        <GridView x:ConnectionId='4' x:Name="dataGridGameBoard"
                  Grid.Row="1"
                                                 
                  Margin="2,60"
                  Height="590"
                  Width="1480"
                  Background="AliceBlue"
                  BorderThickness="2"
                  BorderBrush="Black"
                  SelectionMode="None"
                  IsItemClickEnabled="True"
                                                         
        >
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid MaximumRowsOrColumns="13"
                                   Orientation="Horizontal"
                    />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>

            <GridView.ItemTemplate>
                <DataTemplate x:Name="CardPosition">
                    <StackPanel x:ConnectionId='8' Margin="2"
                                Height="70"
                                Width="35"
                                
                    >
                        <TextBlock x:ConnectionId='9' x:Name="cardRank"                         />
                        <TextBlock x:ConnectionId='10' x:Name="cardSuit"                         />
                        <Image x:ConnectionId='11' x:Name="CardFace"
                                   Height="auto"
                                   Width="auto"
                                   Stretch="UniformToFill"
                                                                    
                        />
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
 
        <!--Game Tableu Footer -->
        <Grid x:ConnectionId='5' Name="grdActions"
              Grid.Row="2"
              Margin="2,2"
              Height="48"
              Width="1478"
              Background="Blue"
              BorderThickness="2"
              BorderBrush="Black"
        >
            <Grid.RowDefinitions>
                <RowDefinition Height="46"></RowDefinition>
            </Grid.RowDefinitions>
 
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="140"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:ConnectionId='6' x:Name="GameFooter"
                       Grid.Column="4"
                       Text="Menus and whatnot"
                       FontSize="24pi"
            />
        </Grid>
   </Grid>
</Page>

