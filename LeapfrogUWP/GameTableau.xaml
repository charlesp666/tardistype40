<Page x:Name="pgGameTableau"
      x:Class="LeapfrogUWP.GameTableau"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:LeapfrogUWP"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      Height="910"
      Width="1700"
>

    <Grid Name="gameTableau"
          Background="Blue"
          Margin="2,5"
          BorderThickness="5"
    >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1500"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="700"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!--Game Tableu Header -->
        <Grid Name="ftrHearder"
                  BorderThickness="10"
                  BorderBrush="White"
                  Margin="5,5"
            >
            <TextBox x:Name="GameHeader"
                         Text="Header Stuff"
                         FontSize="24pi"
                         Width="1600"
                         Height="100"
                />
        </Grid>
        <!--Game Tableu Playing Area -->
        <GridView x:Name="dataGridGameBoard"
                  SelectionMode="None"
                  IsItemClickEnabled="True"
                  ItemClick="dataGridGameBoard_CellClick"
                  ItemsSource="{x:Bind cardList}"
                  Height="800"
                  Width="1600"
                  Margin="5,5,0,0"
                  BorderThickness="10"
                  BorderBrush="White"
        >
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid MaximumRowsOrColumns="13"
                                       Orientation="Horizontal"
                        />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridView.ItemTemplate>
                <DataTemplate x:Name="CardPosition">
                    <StackPanel Height="150"
                                Width="100"
                                Margin="2"
                    >
                        <TextBox x:Name="cardRank" Text="{x:Bind cardRank}"/>
                        <TextBox x:Name="cardSuit" Text="{x:Bind cardSuit}"/>
                        <Image x:Name="CardFace"
                                   Height="auto"
                                   Width="auto"
                                   Stretch="UniformToFill"
                                   Source="{x:Bind CardFace.Source}"
                        />
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

        <!--Game Tableu Footer -->
        <Grid Name="ftrTableau"
                  BorderThickness="10"
                  BorderBrush="White"
                  Margin="5,800"
                  Grid.Row="2"
            >
            <TextBox x:Name="GameFooter"
                         Text="Menus and whatnot"
                         FontSize="120pi"
                         Width="5000"
                         Height="200"
                />
        </Grid>
    </Grid>
</Page>
