<Page x:Name="mainPage"
      x:Class="LeapfrogUWP.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:LeapfrogUWP"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    >

    <Grid Margin="10,10,10,10" Background="#FF0000C0">
        <Grid.RowDefinitions>
            <RowDefinition Height="400*"/>
            <RowDefinition Height="650*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1180*"/>
            <ColumnDefinition Width="660*"/>
        </Grid.ColumnDefinitions>

        <!--"Froggy" Game Image -->
        <Image x:Name="picGameImage"
               HorizontalAlignment="Left"
               Height="429"
               Margin="10,22,0,0"
               VerticalAlignment="Top"
               Width="358"
               Source="/GameImages/LeapFrog.jpg"
               FocusVisualPrimaryBrush="#FF0000C0"
               Grid.RowSpan="2"
         />

        <!--Game Title -->
        <TextBox x:Name="lblGameTitle"
                 HorizontalAlignment="Left"
                 Margin="380,26,0,0"
                 TextWrapping="Wrap"
                 Text="lblGameTitle"
                 VerticalAlignment="Top"
                 Grid.ColumnSpan="2"
                 Height="138"
                 Width="1040"
                 Background="#FF0000C0"
                 FontWeight="ExtraBold"
                 FontFamily="Arial Black"
                 FontSize="36"
                 Foreground="White"
         />

        <!--Game SubTitle -->
        <TextBox x:Name="txtSubTitle"
                 TextWrapping="Wrap"
                 Text="txtSubTitle"
                 Margin="380,197,480,130"
                 Grid.ColumnSpan="2"
                 Background="#FF0000C0"
                 FontFamily="Arial"
                 FontSize="14"
                 Foreground="White"
                 PlaceholderText="txtSubTitle"
        />

        <!--Copyright Notice -->
        <TextBox x:Name="lblCopyright"
                 TextWrapping="Wrap"
                 Text="lblCopyright"
                 Margin="380,320,480,130"
                 Grid.ColumnSpan="2"
                 Background="#FF0000C0"
                 FontFamily="Arial Black"
                 FontSize="12"
                 Foreground="White"
                 PlaceholderText="lblCopyright"
        />

        <!--Rights Reserved -->
        <TextBox x:Name="txtRights"
                 TextWrapping="Wrap"
                 Text="txtRights"
                 Margin="380,450,480,130"
                 Grid.ColumnSpan="2"
                 Background="#FF0000C0"
                 FontFamily="Arial"
                 FontSize="12"
                 Foreground="White"
                 PlaceholderText="txtRights"
        />

        <!--Rights Reserved -->
        <ProgressBar x:Name="pbGameIntro"
                     HorizontalAlignment="Left"
                     Height="51"
                     Margin="315,251,0,0"
                     Grid.Row="1"
                     VerticalAlignment="Top"
                     Width="900"
        />
    </Grid>
</Page>
