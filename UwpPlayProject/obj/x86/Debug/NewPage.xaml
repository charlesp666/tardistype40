<Page x:ConnectionId='1' x:Class="UwpPlayProject.NewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:UwpPlayProject"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      Height="800"
      Width="1500"
>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1490"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="600*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>

        <Grid x:ConnectionId='2' Name="grdHeader"
              Grid.Row="0"
              Margin="1,1"
              Height="49"
              Width="1498"
        >
            <TextBlock x:ConnectionId='11' x:Name="pageTitle"
                       Text="Page 2"
                       Margin="1,1"
                       Style="{StaticResource TitleTextBlockStyle}"
            />

            <TextBlock x:ConnectionId='12' x:Name="textBlock"
                        Text="TextBlock"
                        Margin="200,1,0,0"
                        Width="200"
                        Height="48"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
             />
        </Grid>

        <GridView x:ConnectionId='3'                            
                  Grid.Row="1"
                  IsItemClickEnabled="True"
                                                
        >
            <GridView.ItemTemplate>
                <DataTemplate                       >
                    <StackPanel x:ConnectionId='7' Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image x:ConnectionId='8' Width="150"                          HorizontalAlignment="Center"></Image>
                        <StackPanel Margin="20,20,0,0">
                            <TextBlock x:ConnectionId='9' FontSize="18"                          HorizontalAlignment="Right"></TextBlock>
                            <TextBlock x:ConnectionId='10' FontSize="10"                        HorizontalAlignment="Right"></TextBlock>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
 
        <Grid x:ConnectionId='4' Name="grdMenus"
              Grid.Row="2"
        >
            <HyperlinkButton x:ConnectionId='5' Content="Click to go to main page"
                                                          
                             HorizontalAlignment="Center"
            />
        </Grid>
    </Grid>
</Page>

